<link rel="stylesheet" href="/css/edit.css">
<link rel="stylesheet" href="/css/grid-view.css">
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/progress.css">



<div class="page-wrap">
    <div class="page-col">
        <h2>Настройка занятия</h2>
        <form class="edit-form" action="/exercise/{{action}}" method="post">
            <label>
                <div class="form-elem">
                    <span>{{fields.link}}</span>
                    <input type="text" name="exercise[link]" value="{{formData.link}}" required>
                </div>
            </label>

            <label for="">
                <div class="form-elem">
                    <span>{{fields.desc}}</span>
                    <textarea name="exercise[desc]">{{formData.desc}}</textarea>
                </div>
            </label>

            <label>
                <div class="">
                    <input type="submit" name="do" value="Отправить">
                </div>
            </label>
        </form>
    </div>
    <div class="page-col second-col">
        <div class="grid-view">
            {{#each files}}
            <div class="view-row">
                <div class="view-field">
                    {{this.title}}
                </div>
                <div class="view-content">
                    <a class="file-del" href="/file/delete?filename={{this.title}}&path=/teacher">Удалить</a>
                    <i class="fa fa-spinner fa-spin"></i>
                </div>
            </div>
            {{/each}}
        </div>
        <form class="file-form" action="/file" method="post">
            <span>Добавить новый файл</span>
            <input id="file" type="file" name="" value="">
            <div class="progress">
                <progress style="visibility: hidden" max="100" value="0" id="progress"></progress>
            </div>
            <input id="submit" style="visibility: hidden" type="submit" name="" value="Отправить файл">
        </form>
    </div>
</div>

<script type="text/javascript">
    var id = {{{exerciseId}}};
</script>
<script src="/js/teacherUpload.js"></script>
<script src="/js/deleteFile.js"></script>
