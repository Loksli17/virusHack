<style media="screen">
    .week{
        display: flex;
    }

    .day{
        margin-right: 20px;
    }
    .exercise{
        min-height: 100px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .exercise:hover{
        background: #ccc;
        cursor: pointer;
    }

    .info {
        background: #fff;
        padding: 5px;
        /* visibility: hidden; */
        display: none;
    }

    .label {
        margin-bottom: 0px;
    }

    .exercise-name {
        margin: 0px;
    }

    .link {
        color: black;
        background: #ccc;
        display: inline-block;
        padding: 5px 10px;
        margin: 5px;
        text-decoration: none;
    }

    .time-display {
        font-size: 40px;
    }
</style>


<div class="wrapper">
    <div class="week">
    {{#each exerView}}
        <div class="day">
            {{#each this.exercises}}
            <div class="exercise" id='{{this.id}}'>
                <div class="number">
                    {{this.number}}
                </div>
                <div class="sub-title">
                    {{this.subTitle}}
                </div>
                <div>
                    {{this.gtitle}}
                </div>
                <div class="time">
                    {{this.time}}
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
    </div>
    <div class="info">
        <div class="name">
            <h5 class="label">пара</h5>
            <h1 id="exercise-name" class="exercise-name"></h1>
        </div>
        <a id="link" class="link" href="">Подключиться к занятию</a>
        <div class="group-title">

        </div>
        <br />
        <a id="setup" class="link" href="/exercise/edit?id=">Настроить задание</a>
        <a id="goto" class="link" href="/exercise/edit?id=">Перейти в задание</a>

        <div id="time" class="time-display">

        </div>
    </div>
</div>

<script type="text/javascript">
    let array = {{{exercises}}};
</script>

<script src="js/displayExerciseTeacher.js"></script>
