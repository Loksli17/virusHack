<style media="screen">
    .week{
        display: flex;
    }

    .day{
        margin-right: 20px;
    }
    .exercise{
        min-height: 100px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .exercise:hover{
        background: #ccc;
        cursor: pointer;
    }

    .info {
        background: #fff;
        padding: 5px;
        visibility: hidden;
    }

    .label {
        margin-bottom: 0px;
    }

    .exercise-name {
        margin: 0px;
    }

    .description {
        padding: 10px 0px;
    }
</style>


<div class="week">
{{#each exerView}}
    <div class="day">
        {{#each this.exercises}}
        <div class="exercise" id='{{this.id}}'>
            <div class="number">
                {{this.number}}
            </div>
            <div class="sub-title">
                {{this.subTitle}}
            </div>
            <div>
                {{this.gtitle}}
            </div>
            <div class="time">
                {{this.time}}
            </div>
        </div>
        {{/each}}
    </div>
{{/each}}
</div>
