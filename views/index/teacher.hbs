<link rel="stylesheet" href="/css/page-teacher.css">

<h1>Текущая неделя</h1>
    <div class="schedule">
    {{#each exerView}}
        <div class="day">
            <div class="dayTitle">
				<div>
					<div class="date">{{date}}</div>
					<div class="month">мая</div>
                </div>
				<span>{{this.dayWeek}}</span>
			</div>
            <ul class="dayLessons">
                {{#each this.exercises}}
                {{#if this.exist}}
                <li class="lesson exercise" id="{{this.id}}">
                    <div class="lessonName">
                        {{this.subTitle}}
                    </div>
                    <div class="lessonTeacher">
                        <img src="/img/timeTable/man-avatar_1.svg">
                        <span>{{this.gtitle}}</span>
                    </div>
                    <div class="lessonTime">
                        <img src="/img/timeTable/symbol_2.svg">
                        <span>{{this.time}}</span>
                    </div>
                </li>
                {{else}}
                <li class="lesson">
                    <div class="lessonName">
                        Окно
                    </div>
                    <div class="lessonTeacher">
                        --
                    </div>
                    <div class="lessonTime">
                        <span>00:00</span>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>

        </div>
    {{/each}}
    </div>

<h1>Просмотр занятия</h1>

<div class="lessonAbout info">
	<div class="lessonAboutInfo">
		<span>лекция</span>
		<div class="lessonAboutName exercise-name">
		</div>
		<div class="lessonDescription desc">
