<style media="screen">
    .week{
        display: flex;
    }

    .day{
        margin-right: 20px;
    }
    .exercise{
        min-height: 100px;
    }
</style>

<div id="wrapper" class="wrapper">
    <div class="week">
    {{#each exerView}}
        <div class="day">
            {{#each this.exercises}}
            <div class="exercise" id='{{this.id}}'>
                <div class="number">
                    {{this.number}}
                </div>
                <div class="sub-title">
                    {{this.subTitle}}
                </div>
                <div class="teacher">
                    {{this.teacher}}
                </div>
                <div class="time">
                    {{this.time}}
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
    </div>
</div>


<script type="text/javascript">
        let array = {{{exercises}}};
</script>

<script src="js/displayExercise.js"></script>
