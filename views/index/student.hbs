<style media="screen">
    .week{
        display: flex;
    }

    .day{
        margin-right: 20px;
    }
    .exercise{
        min-height: 100px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .exercise:hover{
        background: #ccc;
        cursor: pointer;
    }

    .info {
        background: #ccc;
        padding: 5px;
        visibility: hidden;
    }

    .label {
        margin-bottom: 0px;
    }

    .exercise-name {
        margin: 0px;
    }

    .description {
        padding: 10px 0px;
    }
</style>

<div id="wrapper" class="wrapper">
    <div class="week">
    {{#each exerView}}
        <div class="day">
            {{#each this.exercises}}
            <div class="exercise" id='{{this.id}}'>
                <div class="number">
                    {{this.number}}
                </div>
                <div class="sub-title">
                    {{this.subTitle}}
                </div>
                <div class="teacher">
                    {{this.teacher}}
                </div>
                <div class="time">
                    {{this.time}}
                </div>
            </div>
            {{#if this.gtitle}}
                <div>
                    {{this.gtitle}}
                </div>
            {{/if}}
        </div>
    {{/each}}
    </div>
    <div class="info">
        <div class="name">
            <h5 class="label">пара</h5>
            <h1 id="exercise-name" class="exercise-name"></h1>
        </div>
        <div class="description"></div>
        <input type="file" name="" value="">
        <div class="teacher-name"></div>
    </div>
</div>


<script type="text/javascript">
        let array = {{{exercises}}};
</script>

<script src="js/displayExercise.js"></script>
